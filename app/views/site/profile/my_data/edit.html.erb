<%= render partial: 'layouts/shared/notifications' %>

<h1>Meus dados</h1>
  <% if @profile_member.errors.any? %>
      <div class="alert alert-danger alert-dismissable">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>

          <ul>
              <% @profile_member.errors.full_messages.each do |messagem| %>
                  <li><%= messagem %></li>
              <% end -%>
          </ul>
      </div>
  <% end %>

<%= form_for( @profile_member, url: site_profile_my_datum_path(@profile_member) ) do |f| %>

  <div class="row">
    <div class="col-xs-6">
      <div class="form-group">
        <label>Nome</label>
        <%= f.text_field :first_name, class: "form-control", placeholder: "Título" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-4">
      <div class="form-group">
        <label>Sobre Nome</label>
        <%= f.text_field :second_name, class: "form-control", placeholder: "Título" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-3">
      <div class="form-group">
        <label>Data de nascimento</label>
        <%= f.date_field :birthdate, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12">
      <%= submit_tag "Enviar", class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
