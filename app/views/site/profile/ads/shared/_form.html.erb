    <% if @ad.errors.any? %>
        <div class="alert alert-danger alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>

            <ul>
                <% @ad.errors.full_messages.each do |messagem| %>
                    <li><%= messagem %></li>
                <% end -%>
            </ul>
        </div>
    <% end %>

<div class="col-xs-4">
  <%= form_for([:site,:profile, @ad], html: {multipart: true}) do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :category %>
      <%= f.collection_select :category_id, Category.all, :id, :description, {}, {class: 'form-control'} %>
    </div>

    <div class="form-group">
        <%= f.label :price %>
      <div class="input-group">
        <span class="input-group-addon"><%= @ad.price.currency.symbol %></span>
        <%= f.text_field :price, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
        <%= f.label :finish_date %>
        <%= f.date_field :finish_date, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :picture %> <br>
      <% if @ad.picture.present? %>
        <%= image_tag @ad.picture(:medium), class: 'img-thumbnail' %>
      <% end %>
      <%= f.file_field :picture %>
    </div>

</div>
<div class="col-xs-12">
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control", rows: 20 %>
    </div>

    <dib class="panel panel-primary">
      <div class="panel-heading">
        Pré-Visualização
      </div>
      <div class="panel-body">
        <%= md_to_html(@ad.description) %>
      </div>
    </dib>

    <%= submit_tag "Enviar", class: 'btn btn-default' %>
  <% end %>
</div>