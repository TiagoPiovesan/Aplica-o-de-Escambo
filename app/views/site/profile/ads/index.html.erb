<h1>Meus anúncios</h1>

<%= render partial: 'layouts/shared/notifications' %>

<table class="table table-hover">
  <thead>
    <th>#</th>
    <th>Imagem</th>
    <th>Titulo</th>
    <th>Categoria</th>
    <th>Preço</th>
    <th></th>
  </thead>
  <tbody>
    <% @ads.each do |ad| %>
    <tr>
      <th scope="row"><%= ad.id %></th>
      <td><%= image_tag ad.picture(:thumb) %></td>
      <td><%= ad.title %></td>
      <td><%= ad.category.description %></td>
      <td><%= humanized_money_with_symbol ad.price %></td>
      <td><%= link_to "Editar", edit_site_profile_ad_path(ad), class: 'btn btn-primary btn-sm' %></td>
    </tr>
    <% end %>
  </tbody>
</table>