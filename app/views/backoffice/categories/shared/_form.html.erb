<h1 class="page-header"><%= @category.model_name.human %></h1>
<div class="panel panel-default">
    <div class="panel-heading">
        <%= action %>
    </div>
    <!-- /.panel-heading -->
    <% if @category.errors.any? %>
        <div class="alert alert-danger alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>

            <ul>
                <% @category.errors.full_messages.each do |messagem| %>
                    <li><%= messagem %></li>
                <% end -%>
            </ul>
        </div>
    <% end %>

    <div class="panel-body">
        <div class="col-lg-6">
        <%= form_for([:backoffice, @category]) do |f| %>
            <div class="form-group">
                <label>Descrição</label>
                <%= f.text_field :description, class:'form-control', placeholder:'Exemplo: Animais / Pet' %>
            </div>
            <%= f.submit "Salvar", class:'btn btn-default' %>
            <% end %>
        </div>
    </div>

</div>
