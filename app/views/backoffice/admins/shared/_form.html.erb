<h1 class="page-header"><%= @admin.model_name.human %></h1>
<div class="panel panel-default">
    <!-- /.panel-heading -->
    <% if @admin.errors.any? %>
        <div class="alert alert-danger alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>

            <ul>
                <% @admin.errors.full_messages.each do |messagem| %>
                    <li><%= messagem %></li>
                <% end -%>
            </ul>
        </div>
    <% end %>

    <div class="panel-body">
        <div class="col-lg-6">
        <%= form_for([:backoffice, @admin]) do |f| %>
            <div class="form-group">
               <%= f.label :name %>
               <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "Nome do Administrador", autofocus: "autofocus" %>
            </div>
            <div class="form-group">
               <%= f.label :email %>
               <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "E-mail do Administrador", autofocus: "autofocus" %>
            </div>

            <% if policy(@admin).edit? %>
                <div class="form-group">
                <%= f.label :role %>
                <%= f.collection_radio_buttons(:role, options_for_roles, :id, :description) do |b| %>
                  <div class="radio">
                    <%= b.label { b.radio_button + b.text } %>
                  </div>
                <% end %>
                </div>
            <% end %>

            <div class="form-group">
               <%= f.label :password %>
               <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Senha" %>
            </div>
            <div class="form-group">
               <%= f.label :password_confirmation %>
               <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirmação da senha" %>
            </div>
            <%= f.submit "Salvar", class:'btn btn-default' %>
            <% end %>
        </div>
    </div>

</div>