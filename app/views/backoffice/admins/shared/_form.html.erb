<h1 class="page-header">Admin</h1>
<div class="panel panel-default">
    <!-- /.panel-heading -->
    <% if @admin.errors.any? %>
        <div class="alert alert-danger alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>

            <ul>
                <% @admin.errors.full_messages.each do |messagem| %>
                    <li><%= messagem %></li>
                <% end -%>
            </ul>
        </div>
    <% end %>

    <div class="panel-body">
        <div class="col-lg-6">
        <%= form_for([:backoffice, @admin]) do |f| %>
            <div class="form-group">
               <label>Nome</label>
                <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "Nome do Administrador", autofocus: "autofocus" %>
            </div>
            <div class="form-group">
               <label>E-mail</label>
                <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "E-mail do Administrador", autofocus: "autofocus" %>
            </div>
            <div class="form-group">
              <br/>
                <label>Senha</label>
                <%= f.password_field :password, autocomplete: "off", autocomplete: "off", class: "form-control", placeholder: "Senha do Administrador" %>
            </div>
            <div class="form-group">
                <label>Confirmação da senha</label>
                <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirmação da senha" %>
            </div>
            <%= f.submit "Salvar", class:'btn btn-default' %>
            <% end %>
        </div>
    </div>

</div>